// Construction Progress Tracking Database Schema
// For TAMA 38/2 urban renewal project at Mosinzon 5, Tel Aviv

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Single project (Mosinzon 5)
model Project {
  id          String      @id @default(cuid())
  name        String      @default("מוסינזון 5 תל אביב")
  address     String      @default("מוסינזון 5, תל אביב")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  reports     Report[]
  apartments  Apartment[]
}

// One report per PDF file
model Report {
  id            String       @id @default(cuid())
  projectId     String
  project       Project      @relation(fields: [projectId], references: [id])
  reportDate    DateTime     // Date of the inspection report
  fileName      String       @unique // Original PDF filename
  filePath      String       // Path to the PDF file
  fileHash      String?      // SHA256 hash of file content for duplicate detection
  inspector     String?      // Inspector name
  rawExtraction String?      // Raw JSON extraction from Claude
  processed     Boolean      @default(false)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  workItems     WorkItem[]
  inspections   Inspection[]

  @@index([reportDate])
  @@index([fileHash])
}

// 8 apartments tracked (1, 3, 5, 6, 7, 10, 11, 14)
model Apartment {
  id          String       @id @default(cuid())
  projectId   String
  project     Project      @relation(fields: [projectId], references: [id])
  number      String       // Apartment number (1, 3, 5, 6, 7, 10, 11, 14)
  floor       Int?         // Floor number if known
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  workItems   WorkItem[]
  inspections Inspection[]

  @@unique([projectId, number])
}

// Individual tasks with status
model WorkItem {
  id          String      @id @default(cuid())
  reportId    String
  report      Report      @relation(fields: [reportId], references: [id], onDelete: Cascade)
  apartmentId String?     // Null for site-level/development work
  apartment   Apartment?  @relation(fields: [apartmentId], references: [id])
  category    String      // Work category (Electrical, Plumbing, etc.)
  location    String?     // Specific location within apartment
  description String      // Task description
  status      String      // Status enum as string
  notes       String?     // Additional notes
  hasPhoto    Boolean     @default(false)
  photoNotes  String?     // Notes about what's shown in the photo (defects, issues)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([reportId])
  @@index([apartmentId])
  @@index([category])
  @@index([status])
}

// Per-apartment inspection dates/status by category
model Inspection {
  id              String    @id @default(cuid())
  reportId        String
  report          Report    @relation(fields: [reportId], references: [id], onDelete: Cascade)
  apartmentId     String
  apartment       Apartment @relation(fields: [apartmentId], references: [id])
  category        String    // Inspection category
  inspectionDate  DateTime? // Date of inspection for this category
  status          String?   // Overall status for this category
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([reportId, apartmentId, category])
  @@index([apartmentId])
}

// Snapshot for rollback capability - stores state before upload operations
model Snapshot {
  id          String    @id @default(cuid())
  reason      String    // Why snapshot was created (e.g., "pre-upload: filename.pdf")
  data        String    // JSON blob containing all reports, workItems, inspections
  reportCount Int       // Number of reports at time of snapshot
  createdAt   DateTime  @default(now())
  restoredAt  DateTime? // If this snapshot was used for rollback
  
  @@index([createdAt])
}
