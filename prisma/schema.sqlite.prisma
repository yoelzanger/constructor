// Temporary SQLite schema for local dev client generation
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id          String      @id @default(cuid())
  name        String      @default("מוסינזון 5 תל אביב")
  address     String      @default("מוסינזון 5, תל אביב")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  reports     Report[]
  apartments  Apartment[]
}

model Report {
  id            String       @id @default(cuid())
  projectId     String
  project       Project      @relation(fields: [projectId], references: [id])
  reportDate    DateTime
  fileName      String       @unique
  filePath      String
  fileHash      String?
  inspector     String?
  rawExtraction String?
  processed     Boolean      @default(false)
  hasErrors     Boolean      @default(false)
  errorDetails  String?
  hasWarnings   Boolean      @default(false)
  warningDetails String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  workItems     WorkItem[]
  inspections   Inspection[]

  @@index([reportDate])
  @@index([fileHash])
}

model Apartment {
  id          String       @id @default(cuid())
  projectId   String
  project     Project      @relation(fields: [projectId], references: [id])
  number      String
  floor       Int?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  workItems   WorkItem[]
  inspections Inspection[]

  @@unique([projectId, number])
}

model WorkItem {
  id          String      @id @default(cuid())
  reportId    String
  report      Report      @relation(fields: [reportId], references: [id], onDelete: Cascade)
  apartmentId String?
  apartment   Apartment?  @relation(fields: [apartmentId], references: [id])
  category    String
  location    String?
  description String
  status      String
  notes       String?
  hasPhoto    Boolean     @default(false)
  photoNotes  String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([reportId])
  @@index([apartmentId])
  @@index([category])
  @@index([status])
}

model Inspection {
  id              String    @id @default(cuid())
  reportId        String
  report          Report    @relation(fields: [reportId], references: [id], onDelete: Cascade)
  apartmentId     String
  apartment       Apartment @relation(fields: [apartmentId], references: [id])
  category        String
  inspectionDate  DateTime?
  status          String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([reportId, apartmentId, category])
  @@index([apartmentId])
}

model Snapshot {
  id          String    @id @default(cuid())
  reason      String
  data        String
  reportCount Int
  createdAt   DateTime  @default(now())
  restoredAt  DateTime?

  @@index([createdAt])
}

model ActivityLog {
  id           String   @id @default(cuid())
  timestamp    DateTime @default(now())
  activityType String
  description  String
  ipAddress    String?
  city         String?
  details      String?

  @@index([timestamp])
}
